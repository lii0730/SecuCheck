<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1920px"
    android:layout_height="1080px"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/statusImgViewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Status Image"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonSecucheck"
        android:layout_width="171px"
        android:layout_height="171px"
        android:onClick="onButtonSecucheckClicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:padding="0px"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/i01_btnsecucheck" />

    <Button
        android:id="@+id/buttonConf"
        android:layout_width="200px"
        android:layout_height="200px"
        android:alpha="0"
        android:onClick="onButtonConfClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Button" />
</androidx.constraintlayout.widget.ConstraintLayout>